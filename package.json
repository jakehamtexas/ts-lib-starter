{
  "name": "iconcur",
  "version": "0.0.1",
  "description": "A lightweight library for resolving promises concurrently, with concurrency limits. I concur!",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "rebuild": "rm -rf dist && npm run build",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "build:publish": "npm run rebuild",
    "test": "mocha --require ts-node/register ./test/*.spec.ts",
    "eslint": "eslint '*/**/*.ts'",
    "lint": "npm run eslint -- --quiet --fix",
    "lint:ci": "npm run eslint --max-warnings=1",
    "pretty": "prettier --write"
  },
  "keywords": [
    "concurrency",
    "limit",
    "promise",
    "ts",
    "js",
    "typescript",
    "javascript",
    "iconcur",
    "concur"
  ],
  "author": "Jake Hamilton",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "bash -c 'npm run build'",
      "npm run lint",
      "bash -c 'npm run rebuild'",
      "npm run test"
    ],
    "*.{ts,md}": "npm run pretty"
  }
}
